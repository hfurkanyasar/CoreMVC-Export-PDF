@model IEnumerable<CoreMVCExportPDF.Entities.Products>
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Products</title>
</head>
<body>
    <h4>Products</h4>
    <hr />
    <div id="Grid">
        <table cellpadding="5" cellspacing="0" style="border: 1px solid #ccc;">
            <tr>
                <th style="background-color: #B8DBFD;border: 1px solid #ccc">ProductID</th>
                <th style="background-color: #B8DBFD;border: 1px solid #ccc">ProductName</th>
                <th style="background-color: #B8DBFD;border: 1px solid #ccc">UnitPrice</th>
                <th style="background-color: #B8DBFD;border: 1px solid #ccc">UnitsInStock</th>
            </tr>
            @foreach (var product in Model)
            {
                <tr>
                    <td style="border: 1px solid #ccc">@product.ProductID</td>
                    <td style="border: 1px solid #ccc">@product.ProductName</td>
                    <td style="border: 1px solid #ccc">@product.UnitPrice</td>
                    <td style="border: 1px solid #ccc">@product.UnitsInStock</td>
                </tr>
            }
        </table>
    </div>
    <br /><br />
    <form method="post" asp-action="ExportProduct" asp-controller="Product">
        <input type="submit" id="btnSubmit" value="Export" />
    </form>
</body>
</html>
